                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources-wsdl</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.wsdlDirectory}</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.build.wsdlSourceDirectory}</directory>
                                    <includes>
                                        <include>*.wsdl</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-test-resources</id>
                    </execution>
                    <execution>
                        <id>copy-test-resources-testng</id>
                    </execution>
                    <execution>
                        <id>copy-test-resources-it</id>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>jar-sources</id>
                    </execution>
                    <execution>
                        <id>test-jar-sources</id>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-test</id>
                    </execution>
                    <execution>
                        <id>test-integration</id>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.gmavenplus</groupId>
                <artifactId>gmavenplus-plugin</artifactId>
                <executions>
                    <execution>
                        <id>process-sources-ws</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <scripts>
                                <script>file://${project.build.groovyScriptSourceDirectory}/phiz-process-sources-ws.groovy</script>
                            </scripts>
                        </configuration>
                    </execution>
                    <execution>
                        <id>process-resources-app</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>process-properties</id>
                    </execution>
                    <execution>
                        <id>process-test-resources</id>
                    </execution>
                    <execution>
                        <id>process-resources-deb-control</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>process-resources-deb-data</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>process-test-components-it</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
